# UniSearch 项目环境变量配置示例
# 复制此文件为 .env 并根据实际情况修改配置

# 项目配置
PROJECT_NAME=unisearch
COMPOSE_PROJECT_NAME=unisearch

# 域名配置
DOMAIN=example.com
WWW_DOMAIN=www.example.com
EMAIL=admin@example.com

# SSL 配置
SSL_STAGING=0
RSA_KEY_SIZE=4096

# 后端服务配置
BACKEND_PORT=8888
BACKEND_CHANNELS=tgsearchers3,SharePanBaidu,yunpanxunlei,tianyifc,BaiduCloudDisk
CACHE_ENABLED=true
CACHE_PATH=/app/cache
CACHE_MAX_SIZE=100
CACHE_TTL=60

# 异步插件配置
ASYNC_PLUGIN_ENABLED=true
ASYNC_RESPONSE_TIMEOUT=4
ASYNC_MAX_BACKGROUND_WORKERS=20
ASYNC_MAX_BACKGROUND_TASKS=100
ASYNC_CACHE_TTL_HOURS=1

# 时区配置
TZ=Asia/Shanghai

# 前端配置
NODE_ENV=production

# 网络配置
NETWORK_NAME=unisearch-network

# 卷配置
BACKEND_CACHE_VOLUME=unisearch-backend-cache
CERTBOT_WWW_VOLUME=unisearch-certbot-www
CERTBOT_CONF_VOLUME=unisearch-certbot-conf

# 管理员配置
ADMIN_PASSWORD=admin123
ADMIN_PASSWORD_HASH=

# API Key 认证配置
API_KEY_ENABLED=true
API_KEY_DEFAULT_TTL=720
API_KEY_STORE_PATH=./api_keys.json
