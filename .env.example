# ===========================================
# 基础业务配置 (开发)
# ===========================================
TZ=Asia/Shanghai
PORT=8888

# 认证配置
API_KEY_ENABLED=true
# 管理员密码哈希 (生产环境必须修改)
# 生成方式: ./scripts/gen_admin_password.sh "your_password"
ADMIN_PASSWORD_HASH=

# 缓存配置
CACHE_ENABLED=true
CACHE_PATH=/app/cache
CACHE_MAX_SIZE=100
CACHE_TTL=60

# 异步插件配置
ASYNC_PLUGIN_ENABLED=true
ASYNC_RESPONSE_TIMEOUT=4
ASYNC_MAX_BACKGROUND_WORKERS=20
ASYNC_MAX_BACKGROUND_TASKS=100
ASYNC_CACHE_TTL_HOURS=1
ASYNC_LOG_ENABLED=true

# 插件配置
PLUGIN_TIMEOUT=30
CHANNELS=tgsearchers3,SharePanBaidu,yunpanxunlei,tianyifc,BaiduCloudDisk
# 启用的插件列表
ENABLED_PLUGINS=labi,zhizhen,shandian,duoduo,muou,ouge,huban,cyg,fox4k,hdr4k,hunhepan,jikepan,pan666,panta,panyq,qupansou,susu,thepiratebay,wanou,xuexizhinan
PLUGIN_COUNT=21

# HTTP服务器配置
HTTP_READ_TIMEOUT=90
HTTP_WRITE_TIMEOUT=90
HTTP_IDLE_TIMEOUT=120
HTTP_MAX_CONNS=2000

# 性能优化配置
GC_PERCENT=100
OPTIMIZE_MEMORY=true
ENABLE_COMPRESSION=false
MIN_SIZE_TO_COMPRESS=1024
CONCURRENCY=50

# ===========================================
# 运维部署配置 (生产环境专用)
# ===========================================

# 域名配置
DOMAIN=example.com
WWW_DOMAIN=www.example.com

# Docker镜像配置
DOCKER_USERNAME=your_username
IMAGE_NAME=unisearch
VERSION=1.0.0
# FULL_IMAGE_NAME 可以在compose中组合，或在此处硬编码，推荐保持简单
FULL_IMAGE_NAME=your_username/unisearch:1.0.0

# Nginx端口
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443
FRONTEND_PORT=3000
BACKEND_PORT=8888

# SSL证书配置
SSL_CERT_PATH=/etc/letsencrypt/live/${DOMAIN}/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/${DOMAIN}/privkey.pem
SSL_EMAIL=admin@example.com

# 监控与日志
ENABLE_MONITORING=true
ENABLE_LOG_COLLECTION=true
# Watchtower 更新令牌
WATCHTOWER_TOKEN=your-update-token

# 备份配置
BACKUP_PATH=/opt/unisearch/backup
BACKUP_RETENTION_DAYS=30
AUTO_BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"

# 防火墙
UFW_ENABLED=true
UFW_ALLOW_PORTS=22,80,443

# 部署元数据
DEPLOY_ENV=production
DEPLOY_VERSION=1.0.0
